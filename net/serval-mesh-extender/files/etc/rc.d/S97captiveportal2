#!/bin/sh

# Replace the config file that is part of the nodogsplash OpenWRT
# package with the serval version
cat /etc/serval/nodogsplash.conf > /etc/config/nodogsplash

# Un-tar the serval web pages
mkdir -p /serval/www/
cd /serval/www/
tar zxf /etc/serval/servalwww.tgz

# Start the captive portal
/etc/init.d/nodogsplash start
